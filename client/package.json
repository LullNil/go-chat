{
  "name": "GoChat",
  "version": "1.0.0",
  "private": true,
  "description": "Chat messenger built with Electron and Vue",
  "author": "memoire",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm run serve\" \"npm run electron:start\"",
    "build": "cross-env NODE_ENV=production vue-cli-service build && electron-builder",
    "electron:start": "wait-on http://localhost:8080 && electron .",
    "serve": "vue-cli-service serve",
    "watch": "vue-cli-service build --watch"
  },
  "main": "main.js",
  "dependencies": {
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "core-js": "^3.8.3",
    "vue": "^3.2.13",
    "vue-router": "^4.5.0",
    "vuex": "^4.1.0"
  },
  "build": {
    "appId": "com.example.electron-vue-chat",
    "productName": "GoChat",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "preload.js",
      "node_modules/**/*",
      "public/**/*",
      "main.js"
    ]
  },
  "win": {
    "target": "nsis",
    "icon": "assets/icon.png"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "wait-on": "^8.0.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
